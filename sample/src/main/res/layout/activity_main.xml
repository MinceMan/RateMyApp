<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.mariosangiorgio.ratemyapp.sample.MainActivity">

    <TextView
        android:id="@+id/textview_alerts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Are Alerts enabled = "/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:id="@+id/textview_launch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Launch count 10, counts before launch = "/>

            <EditText
                android:id="@+id/edittext_launch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/launch_hint"/>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textview_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Days since first launch 7, days before launch = "/>

            <EditText
                android:id="@+id/edittext_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/launch_hint"/>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_rest"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/reset"/>

        <Button
            android:id="@+id/button_tigger_launch"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/trigger_launch"/>
    </LinearLayout>

</LinearLayout>
